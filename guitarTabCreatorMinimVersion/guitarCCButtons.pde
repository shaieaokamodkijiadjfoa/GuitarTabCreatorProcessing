  void drawChordChart(float x, float y) {
    float startX = x;
    float startY = y;
    pushStyle();
    for (int i = 0; i < 12; i++) {
      for (int j = 0; j < 14; j++) {
        float rectX = i * 80 + startX;
        float rectY = 5 + (j*30)  + startY;
        float textX = i * 80  + startX;
        float textY = 2 + (j*30) + startY;
        float rectW = 75;
        float rectH = 25;
